syntax on

set number
set list
set listchars=tab:>\ ,trail:-,nbsp:%
set hlsearch
set showmatch
set whichwrap=b,s,h,l,<,>,[,]
set autoindent
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set backspace=indent,eol,start
set cursorline
set sidescrolloff=4
set laststatus=2
set statusline=%F%m%r%h%w\ [FORMAT=%{&ff}]\ [TYPE=%Y]\ [ASCII=\%03.3b]\ [HEX=\%02.2B]\ [POS=%04l,%04v][%p%%]\ [LEN=%L]
